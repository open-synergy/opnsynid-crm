<openerp>
<data>
<record id="crm_lead_view_form" model="ir.ui.view">
    <field name="name">crm.lead form - lead type</field>
    <field name="model">crm.lead</field>
    <field name="inherit_id" ref="crm.crm_case_form_view_oppor"/>
    <field name="arch" type="xml">
        <data>
            <xpath expr="//notebook" position="inside">
                <page name="product_catalog" string="Product Catalog">
                    <group name="product_catalog" colspan="4" col="2">
                        <field name="pricelist_id"/>
                        <field name="product_ids" colspan="2" nolabel="1" context="{'pricelist':pricelist_id}" domain="[('sale_ok','=',True)]">
                            <tree>
                                <field name="name"/>
                                <field name="code"/>
                                <field name="uom_id"/>
                                <field name="price"/>
                            </tree>
                        </field>
                    </group>
                </page>
            </xpath>
        </data>
    </field>
</record>
</data>
</openerp>
