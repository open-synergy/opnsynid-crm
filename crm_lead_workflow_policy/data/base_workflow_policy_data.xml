<odoo>
    <record id="base_workflow_crm_lead" model="base.workflow_policy">
        <field name="model_id" ref="crm.model_crm_lead"/>
    </record>
    <record id="base_workflow_line_crm_lead_won" model="base.workflow_policy_line">
        <field name="workflow_id" ref="crm_lead_workflow_policy.base_workflow_crm_lead"/>
        <field name="field_id" search="[('model_id.model','=','crm.lead'),('name','=','won_ok')]"/>
        <field name="python_code">result = document.team_id.lead_won_group_ids.ids</field>
    </record>
    <record id="base_workflow_line_crm_lead_lost" model="base.workflow_policy_line">
        <field name="workflow_id" ref="crm_lead_workflow_policy.base_workflow_crm_lead"/>
