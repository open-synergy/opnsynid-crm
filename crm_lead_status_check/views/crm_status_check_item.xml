<odoo>
    <record id="crm_status_check_item_tree_view" model="ir.ui.view">
        <field name="name">crm.status.check.item.view.tree</field>
        <field name="model">crm.status_check_item</field>
        <field name="arch" type="xml">
            <tree>
                <field name="code"/>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="crm_status_check_item_form_view" model="ir.ui.view">
        <field name="name">crm.status.check.item.view.tree</field>
        <field name="model">crm.status_check_item</field>
        <field name="arch" type="xml">
            <form>
                <header>
                </header>
                <sheet>
                    <group name="group_1" colspan="4" col="2">
                        <field name="code"/>
                        <field name="name"/>
                        <field name="active"/>
                    </group>
                    <notebook>
                        <page name="page_python_code" string="Python Code">
                            <field name="python_code" colspan="4" widget="ace"/>
                        </page>
                        <page name="page_description" string="Description">
                            <field name="description" colspan="4"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="crm_status_check_item_action" model="ir.actions.act_window">
        <field name="name">Status Check Item</field>
        <field name="res_model">crm.status_check_item</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="crm_status_check_item_menu"
        name="Status Check Item"
        parent="crm_status_check_root_menu"
        action="crm_status_check_item_action"
        sequence="1" />

</odoo>
