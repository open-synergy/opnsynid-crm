<odoo>
    <record id="crm_status_check_template_tree_view" model="ir.ui.view">
        <field name="name">crm.status.check.template.view.tree</field>
        <field name="model">crm.status_check_template</field>
        <field name="arch" type="xml">
            <tree>
                <field name="code" />
                <field name="name" />
            </tree>
        </field>
    </record>

    <record id="crm_status_check_template_form_view" model="ir.ui.view">
        <field name="name">crm.status.check.template.view.tree</field>
        <field name="model">crm.status_check_template</field>
        <field name="arch" type="xml">
            <form>
                <header />
                <sheet>
                    <group name="group_1" colspan="4" col="2">
                        <field name="code" />
                        <field name="name" />
                        <field name="sequence" />
                        <field name="active" />
                    </group>
                    <notebook>
                        <page name="page_details" string="Details">
                            <field name="detail_ids">
                                <tree name="Details" editable="bottom">
                                    <field name="sequence" widget="handle" />
                                    <field name="status_check_item" />
                                </tree>
                            </field>
                        </page>
                        <page name="page_python_code" string="Python Code">
                            <field name="python_code" colspan="4" widget="ace" />
                        </page>
                        <page name="page_description" string="Description">
                            <field name="description" colspan="4" />
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="crm_status_check_template_action" model="ir.actions.act_window">
        <field name="name">Status Check Template</field>
        <field name="res_model">crm.status_check_template</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="crm_status_check_template_menu"
        name="Status Check Template"
        parent="crm_status_check_root_menu"
        action="crm_status_check_template_action"
        sequence="2"
    />

</odoo>
