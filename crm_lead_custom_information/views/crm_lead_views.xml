<odoo>
    <record id="crm_lead_view_form" model="ir.ui.view">
        <field name="name">crm.lead - form</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_case_form_view_oppor" />
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
              <page name="custom_information" string="Custom Information">
                  <group name="custom_information_1" colspan="4" col="2">
                      <field name="custom_info_template_id" string="Template" />
                        <button
                            name="action_reload_custom_info_template"
                            string="Reload Custom Info Template"
                            type="object"
                            colspan="2"
                        />
                  </group>
                  <field name="custom_info_ids" nolabel="1" force_save="1" />
                    <button
                        name="action_reload_custom_info"
                        string="Reload Custom Info"
                        type="object"
                        colspan="2"
                    />
              </page>
            </xpath>
        </field>
    </record>
</odoo>
